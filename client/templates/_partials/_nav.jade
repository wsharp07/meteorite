template(name="_nav")
  nav.navbar.navbar-inverse.navbar-fixed-top
    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#navbar",aria-expanded="false", aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="{{pathFor 'homeIndex'}}") Meteorite
      div#navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href="{{pathFor 'homeIndex'}}") Home
          li
            a(href="{{pathFor 'homeAbout'}}") About
          li
            a(href="{{pathFor 'homeContact'}}") Contact
          li.dropdown
            a.dropdown-toggle(href="#",data-toggle="dropdown",role="button", aria-expanded="false") Suppliers
              span.caret
            ul.dropdown-menu(role="menu")
              each vendors
                li
                  a(href="{{pathFor 'vendorsShow'}}") {{name}}
        ul.nav.navbar-nav.navbar-right
          li 
            if isInRole 'Administrator'
              a(href="") Admin
          | {{> loginButtons }}